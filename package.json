{
  "name": "frameworkless-spa-typescript",
  "version": "1.0.0",
  "scripts": {
    "clean": "npx rimraf ./dist",
    "build": "npx webpack-cli --config webpack.config.frontend.js && npx tsc -p src/backend/tsconfig.json",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/backend/server.js",
    "dev:backend": "npx ts-node-dev --project src/backend/tsconfig.json  --respawn --transpile-only src/backend/server.ts",
    "dev:frontend": "npx webpack serve --config webpack.config.frontend.js",
    "dev": "npx concurrently --kill-others --prefix-colors auto --names frontend,backend \"npm run dev:frontend\" \"npm run dev:backend\"",
    "lint": "npx eslint ./src",
    "WiP-check-prod-deps": "node WiP-check-prod-deps.mjs --production-src-dirs ./src/backend/",
    ".TODO-TEST-LATER.lint:fix": "npx eslint ./src --fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "html-webpack-plugin": "^5.6.0",
    "precinct": "^11.0.5",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
